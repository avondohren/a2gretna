<div class="content_block">
  <p id="notice"><%= notice %></p>

  <p>
    <b>Date:</b>
    <%= @podcast.date %>
  </p>

  <p>
    <b>Title:</b>
    <%= @podcast.title %>
  </p>

  <p>
    <b>Description:</b>
    <%= @podcast.description %>
  </p>

  <p>
    <b>Author:</b>
    <%= @podcast.author %>
  </p>

  <p>
    <b>Series:</b>
    <%= @podcast.series %>
  </p>


  <%= link_to 'Edit', edit_podcast_path(@podcast) %> |
	<%= link_to 'Delete', @podcast, method: "delete", confirm: "Are you sure ?" %> |
  <%= link_to 'Back', podcasts_path %>
</div>
